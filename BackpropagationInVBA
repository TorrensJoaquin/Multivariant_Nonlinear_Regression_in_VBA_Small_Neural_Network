iter = iter + 1
Worksheets("Result").Range("A" & iter).Value = "Dim layer(" & n_hid_layer & ", 1 To " & Application.WorksheetFunction.Max(n_neurons_hid_layer) + 1 & ") As Double"
iter = iter + 1
Worksheets("Result").Range("A" & iter).Value = "syn = MyNeuralWyB()"
iter = iter + 1
