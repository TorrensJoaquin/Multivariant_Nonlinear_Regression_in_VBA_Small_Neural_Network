            Worksheets("Result").Range("A" & iter).Value = "Private Sub WyB" & NumberOfSubsUsedForMemory & "(syn as variant)"
            iter = iter + 1
        End If
        Next j
    Next i
Next z
Worksheets("Result").Range("A" & iter).Value = "End sub"
iter = iter + 1
