iter = iter + 1
Worksheets("Result").Range("A" & iter).Value = "End if"
iter = iter + 1
Worksheets("Result").Range("A" & iter).Value = "Next j"
iter = iter + 1
Worksheets("Result").Range("A" & iter).Value = "layer(" & k & ", " & n_neurons_hid_layer(k) + 1 & ") = 1"
iter = iter + 1
Else
