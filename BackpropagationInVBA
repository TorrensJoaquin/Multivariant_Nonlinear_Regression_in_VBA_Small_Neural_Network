iter = iter + 1
Worksheets("Result").Range("A" & iter).Value = "if aux3(j)>0 then"
iter = iter + 1
Worksheets("Result").Range("A" & iter).Value = "aux1(j) = (aux3(j) -0.1)/0.85 * (YMaximum(j) - YMinimum(j)) + YMinimum(j)"
